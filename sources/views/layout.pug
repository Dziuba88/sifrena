  body
    header.b__header
      .b__header--top: a(href=""): img(src="img/header_img.png", alt="")
      .b__header--topline
        .container
          .nav: ul.nav__items
            li.nav__item: a(href="mailto:km@sifrena.com") km@sifrena.com
            li.nav__item.dropdown.right
              a(data-toggle="dropdown")
                img(src="img/gb.png", alt="")
              .dropdown__menu: ul
                li: a(href="")
                  img(src="img/ru.png", alt="")
                  span Русский
                li: a(href="")
                  img(src="img/md.png", alt="")
                  span Romana
      .b__header--navbar
        .navbar: .container
          .navbar__wraper
            .navbar--brand: a(href=""): img(src="img/logo.png", alt="")
            .navbar--separator
            .navbar--nav: ul.menu
              li.menu__item: a(href="").menu__item--link About sifrena
              li.menu__item.dropdown.left
                a(data-toggle="dropdown").menu__item--link Our signatures
                .dropdown__menu: ul
                  li: a(href="") Megeve - french alpes
                  li: a(href="") Geneve
                  li: a(href="") Dubai
                  li: a(href="") Milano
                  li: a(href="") Chisinau
              li.menu__item: a(href="").menu__item--link.active Our hosts
              li.menu__item: a(href="").menu__item--link Our partners
              li.menu__item: a(href="").menu__item--link contacts
            .navbar--controls
              button.btn.bronze(data-mfp-src="#request" data-mfp-type="inline"): span write us
      #request.mfp-hide.popup__form
        .popup__form--header
          button(data-mfp-close='')
            svg.feather.feather-x(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
              line(x1='18', y1='6', x2='6', y2='18')
              line(x1='6', y1='6', x2='18', y2='18')
          h3 Send Request
          p Send a request and we will contact you soon
        .popup__form--body
          .form--input
            span.required *
            input(type="text", placeholder="Name", name="name")
          .form--input
            span.required *
            input(type="tel", placeholder="Phone", name="phone")
          button.btn.block.blue: span send
